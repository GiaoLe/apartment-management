<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.controller.ApartmentFormController">
   <VBox>
      <Label text="Create a new apartment">
         <font>
            <Font name="System Bold" size="30.0" />
         </font></Label>
      <VBox>
         <Label text="Name"/>
         <TextField fx:id="nameTextField"/>
      </VBox>
      <VBox>
         <Label text="Area"/>
         <TextField fx:id="areaTextField"/>
      </VBox>
      <VBox>
         <Label text="Number of rooms"/>
         <TextField fx:id="roomCountTextField"/>
      </VBox>
      <Button fx:id="submitButton" mnemonicParsing="false" onAction="#submitButtonOnAction" text="Submit" />
   </VBox>
</AnchorPane>
