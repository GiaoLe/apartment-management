<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.controller.ApartmentFormController">
   <VBox>
      <Label text="Create a new apartment" />
      <HBox>
         <Label text="Name" />
         <TextField fx:id="idTextField" />
      </HBox>
      <HBox layoutX="10.0" layoutY="27.0">
         <Label text="Area" />
         <TextField fx:id="areaTextField" />
      </HBox>
      <HBox>
         <children>
            <Label text="Number of rooms" />
            <TextField fx:id="roomCountTextField" />
         </children>
      </HBox>
      <HBox layoutX="10.0" layoutY="77.0">
         <children>
            <Label text="type" />
            <TextField fx:id="typeTextField" />
         </children>
      </HBox>
      <HBox layoutX="10.0" layoutY="127.0">
         <children>
            <Label text="status" />
            <TextField fx:id="statusTextField" />
         </children>
      </HBox>
      <Button fx:id="submitButton" mnemonicParsing="false" onAction="#submitButtonOnAction" text="Submit" />
   </VBox>
</AnchorPane>
