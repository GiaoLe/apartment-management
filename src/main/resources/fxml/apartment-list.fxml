<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.controller.ApartmentListController">
    <VBox>
        <Label text="Apartment List">
            <font>
                <Font name="System Bold" size="30.0" />
            </font>
        </Label>
        <TableView fx:id="apartmentTableView" stylesheets="@../styles/TableView.css">
            <columns>
                <TableColumn fx:id="numberTableColumn" prefWidth="150.0" text="Number" />
            <TableColumn fx:id="floorTableColumn" prefWidth="175.0" text="Floor" />
                <TableColumn fx:id="areaTableColumn" prefWidth="75.0" text="Area" />
                <TableColumn fx:id="totalRoomsTableColumn" prefWidth="150.0" text="Total Rooms" />
                <TableColumn fx:id="totalResidentsTableColumn" prefWidth="150.0" text="Total Residents" />
                <TableColumn prefWidth="175.0" text="Description" />
            </columns>
        </TableView>
        <HBox>
            <Button fx:id="newButton" mnemonicParsing="false" onAction="#newButtonOnAction" prefWidth="60.0"
                    text="New"/>
            <Button fx:id="deleteButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false"
                    onAction="#deleteButtonOnAction" prefWidth="60.0" text="Delete"/>
        </HBox>
    </VBox>
</AnchorPane>
