<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" styleClass="container" stylesheets="@../styles/ApartmentList.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.controller.ApartmentListController">
   <BorderPane prefHeight="600.0" prefWidth="1000.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <center>
          <TableView fx:id="apartmentTableView" prefHeight="538.0" prefWidth="914.0" stylesheets="@../styles/TableView.css" BorderPane.alignment="CENTER">
              <columns>
                  <TableColumn fx:id="floorColumn" prefWidth="114.33332824707031" text="Floor" />
                  <TableColumn fx:id="totalColumn" prefWidth="148.6666717529297" text="Total Apartments" />
                  <TableColumn fx:id="availableColumn" prefWidth="139.5" text="Available Apartments" />
                  <TableColumn fx:id="nAvailableColumn" prefWidth="165.66668701171875" text="Not Available Apartments" />
                  <TableColumn fx:id="occupiedColumn" prefWidth="157.33331298828125" text="Occupied Apartments" />
                  <TableColumn fx:id="residentsColumn" prefWidth="226.33331298828125" text="Total Residents" />
              </columns>
          </TableView>
      </center>
      <bottom>
          <HBox BorderPane.alignment="CENTER">
              <Button fx:id="newButton" mnemonicParsing="false" onAction="#newButtonOnAction" prefWidth="60.0"
                      text="New"/>
              <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#deleteButtonOnAction" prefWidth="60.0"
                      text="Delete"/>
          </HBox>
      </bottom>
      <top>
          <Label text="Apartment List" BorderPane.alignment="CENTER">
              <font>
                  <Font name="System Bold" size="30.0" />
              </font>
          </Label>
      </top>
   </BorderPane>
</AnchorPane>
