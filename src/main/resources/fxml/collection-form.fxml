<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.controller.CollectionFormController">
   <VBox>
      <VBox layoutX="10.0" layoutY="10.0">
         <Label text="Name" />
         <TextField fx:id="nameTextField" prefHeight="13.0" prefWidth="200.0" />
      </VBox>
      <VBox>
         <Label text="Label" />
         <ChoiceBox fx:id="collectionTypeChoiceBox" prefHeight="25.0" prefWidth="201.0" />
      </VBox>
      <VBox layoutX="10.0" layoutY="10.0">
         <Label text="Description" />
         <TextField fx:id="descriptionTextField" prefHeight="13.0" prefWidth="200.0" />
      </VBox>
      <VBox>
         <VBox>
            <children>
               <Label prefHeight="17.0" prefWidth="56.0" text="Deadline" />
               <DatePicker fx:id="deadlineDate" />
            </children>
         </VBox>
         <Label text="Amount" />
         <TextField fx:id="amountTextField" />
      </VBox>
      <HBox>
         <Button fx:id="submitButton" mnemonicParsing="false" onAction="#submitButtonOnAction" text="Submit" />
      </HBox>
   </VBox>
</AnchorPane>
