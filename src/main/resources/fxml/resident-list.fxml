<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.controlsfx.control.PropertySheet?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" styleClass="container" stylesheets="@../styles/ResidentList.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.controller.ResidentListController">
    <BorderPane prefHeight="600.0" prefWidth="1000.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <center>
            <TableView fx:id="residentTableView" editable="true" stylesheets="@../styles/TableView.css" BorderPane.alignment="CENTER">
                <columns>
                    <TableColumn fx:id="idTableColumn" prefWidth="91.5" text="ID" />
                    <TableColumn fx:id="firstNameTableColumn" prefWidth="139.5" text="First Name" />
                    <TableColumn fx:id="lastNameTableColumn" prefWidth="270.5" text="Last Name" />
                    <TableColumn fx:id="apartmentTableColumn" prefWidth="164.5" text="Apartment" />
                </columns>
            </TableView>
        </center>
        <top>
            <Label text="Resident List" BorderPane.alignment="CENTER">
                <font>
                    <Font name="System Bold" size="30.0" />
                </font>
            </Label>
        </top>
        <bottom>
            <HBox BorderPane.alignment="CENTER">
                <Button fx:id="newButton" mnemonicParsing="false" onAction="#newButtonOnAction" prefWidth="60.0" text="New" />
                <Button fx:id="deleteButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#deleteButtonOnAction" prefWidth="60.0" text="Delete" />
                <Button fx:id="detailsButton" layoutX="70.0" layoutY="10.0" mnemonicParsing="false" onAction="#detailsButtonOnAction" prefWidth="60.0" text="Details" />
            </HBox>
        </bottom>
        <right>
            <AnchorPane BorderPane.alignment="CENTER">
                <VBox alignment="TOP_CENTER" prefHeight="530.0" prefWidth="333.0">
                    <Label text="Details" textAlignment="CENTER">
                        <font>
                            <Font name="System Bold" size="24.0" />
                        </font>
                    </Label>
                    <PropertySheet fx:id="residentPropertySheet" onKeyTyped="#enableUpdateButton" />
                    <Button fx:id="updateButton" disable="true" mnemonicParsing="false" onAction="#updateButtonOnAction" text="Update" />
                </VBox>
            </AnchorPane>
        </right>
    </BorderPane>
</AnchorPane>