<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane styleClass="container" stylesheets="@../styles/CollectionList.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.controller.CollectionListController">
   <VBox prefHeight="425.0" prefWidth="767.0">
      <TableView fx:id="collectionsTableView" editable="true" prefHeight="400.0" prefWidth="413.0">
        <columns>
          <TableColumn fx:id="nameTableColumn" prefWidth="216.0" text="Name" />
          <TableColumn fx:id="typeTableColumn" prefWidth="108.5" text="Type" />
            <TableColumn fx:id="amountTableColumn" prefWidth="137.0" text="Amount" />
            <TableColumn fx:id="descriptionTableColumn" minWidth="0.0" prefWidth="304.5" text="Description" />
        </columns>
      </TableView>
       <HBox>
           <Button fx:id="newButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#newButtonOnAction" prefHeight="25.0" prefWidth="60.0" text="New" textAlignment="CENTER" />
           <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#deleteButtonOnAction" prefWidth="60.0" text="Delete" textAlignment="CENTER" />
       </HBox>
   </VBox>
</AnchorPane>
