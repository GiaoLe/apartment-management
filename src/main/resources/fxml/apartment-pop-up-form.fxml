<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.controlsfx.control.PrefixSelectionChoiceBox?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.controllers.ApartmentPopUpFormController">
    <VBox alignment="CENTER">
        <Label prefHeight="49.0" prefWidth="247.0" text="Create a new apartment">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>
        <VBox prefHeight="56.0" prefWidth="277.0">
            <Label style="-fx-font-weight: 800; -fx-font-size: 20px;" text="Name" />
            <TextField fx:id="idTextField" prefHeight="27.0" prefWidth="239.0" styleClass="input-design" stylesheets="@../styles/ApartmentForm.css">
                <VBox.margin>
                    <Insets top="10.0" />
                </VBox.margin>
            </TextField>
        </VBox>
        <VBox prefHeight="65.0" prefWidth="442.0">
            <Label style="-fx-font-weight: 800; -fx-font-size: 20px;" text="Area" />
            <TextField fx:id="areaTextField" prefHeight="25.0" prefWidth="283.0" styleClass="input-design" stylesheets="@../styles/ApartmentForm.css">
                <VBox.margin>
                    <Insets top="10.0" />
                </VBox.margin>
            </TextField>
        </VBox>
        <VBox layoutX="10.0" layoutY="352.0" prefHeight="59.0" prefWidth="277.0">
            <Label style="-fx-font-weight: 800; -fx-font-size: 20px;" text="Number of rooms" />
            <TextField fx:id="roomCountTextField" prefHeight="27.0" prefWidth="292.0" styleClass="input-design" stylesheets="@../styles/ApartmentForm.css">
                <VBox.margin>
                    <Insets top="10.0" />
                </VBox.margin>
            </TextField>
        </VBox>
        <VBox prefHeight="89.0" prefWidth="277.0">
            <Label style="-fx-font-weight: 800; -fx-font-size: 20px;" text="Type" />
         <PrefixSelectionChoiceBox fx:id="apartmentTypeChoiceBox" prefHeight="25.0" prefWidth="141.0" />
        </VBox>
        <Button alignment="CENTER_RIGHT" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#submitButtonOnAction" prefHeight="33.0" prefWidth="74.0" styleClass="btn-design" stylesheets="@../styles/ApartmentForm.css" text="Submit">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
            <effect>
                <Blend />
            </effect>
        </Button>
    </VBox>
</AnchorPane>
